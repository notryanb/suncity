<div class="login-container">
  <% if flash[:error] %>
    <div class="error-msg"><%= flash[:error] %> </div>
  <% end %>

  <h1>Log in</h1>
    <%=form_tag user_sessions_path do %>
      <%= text_field_tag :email, nil,  placeholder: 'email', autocomplete: 'off', class: 'input-field' %>
      <%= password_field_tag :password, nil, placeholder: 'password', autocomplete: 'off', class: 'input-field' %>
    <%= submit_tag 'login', class: 'btn submit' %>
  <% end %>
</div>
